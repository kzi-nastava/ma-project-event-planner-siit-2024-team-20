<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Header with Exit Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Chat"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Exit Button to Close Chat -->
        <Button
            android:id="@+id/close_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Exit" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp">

        <!-- List of Chat Items -->
        <LinearLayout
            android:id="@+id/chat_participant_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <!-- Include Chat Item 1 -->
            <include
                android:id="@+id/chat_item_1"
                layout="@layout/chat_item" />

            <!-- Include Chat Item 2 -->
            <include
                android:id="@+id/chat_item_2"
                layout="@layout/chat_item" />

            <!-- Include Chat Item 3 -->
            <include
                android:id="@+id/chat_item_3"
                layout="@layout/chat_item" />

            <!-- Include Chat Item 2 -->
            <include
                android:id="@+id/chat_item_4"
                layout="@layout/chat_item" />

            <!-- Include Chat Item 3 -->
            <include
                android:id="@+id/chat_item_5"
                layout="@layout/chat_item" />

        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
