<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:background="@color/background_color"
    android:elevation="4dp">

    <!-- ScrollView za skrolovljiv sadržaj -->
    <android.widget.ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/btn_sort"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <!-- LinearLayout unutar ScrollView za vertikalno pozicioniranje sadržaja -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Opcije za sortiranje (ASC/DESC) -->
            <RadioGroup
                android:id="@+id/sort_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_sort_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asc" />

                <RadioButton
                    android:id="@+id/radio_sort_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc" />
            </RadioGroup>

            <!-- Opcije za višestruki izbor -->
            <CheckBox
                android:id="@+id/name_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <CheckBox
                android:id="@+id/description_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <CheckBox
                android:id="@+id/location_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" />

            <CheckBox
                android:id="@+id/type_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type" />

            <CheckBox
                android:id="@+id/date_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start date" />

        </LinearLayout>
    </android.widget.ScrollView>

    <!-- Dugme za potvrdu, fiksirano na dnu -->
    <Button
        android:id="@+id/btn_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="85dp"
        android:gravity="center"
        android:text="@string/sort" />
</RelativeLayout>
