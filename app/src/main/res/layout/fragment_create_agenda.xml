<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView za prikaz aktivnosti -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAgenda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_activity" />

    <!-- Dugme za dodavanje nove aktivnosti -->
    <Button
        android:id="@+id/buttonAddActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dodaj Aktivnost"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveAgenda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dugme za spremanje agende -->
    <Button
        android:id="@+id/buttonSaveAgenda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spremi Agendu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>