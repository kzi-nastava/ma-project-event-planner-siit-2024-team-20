<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.service_product_provider.EditProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editProduct_category"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/smp_category"
                android:inputType="text" />

            <EditText
                android:id="@+id/editProduct_name"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="@string/cpf_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/editProduct_description"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="@string/cpf_description"
                android:inputType="text" />

            <EditText
                android:id="@+id/editProduct_price"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="@string/cpf_price"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:text="@string/cpf_discount"
                android:textColor="@color/text_color"
                android:textSize="18dp" />

            <NumberPicker
                android:id="@+id/npDiscount"
                android:layout_width="77dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDiscount" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectEType"
                android:layout_width="308dp"
                android:layout_height="44dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvETypse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/cpf_checkbox"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_toEndOf="@+id/tvETypse"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/cpf_visibility"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/switchVisibility"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/cpf_availability"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/switchAvailability"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp" />
            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView4"
                android:name="com.example.eventplanner.fragments.service_product.create_product.ImagesPickerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/editProduct_save"
                android:layout_width="200dp"
                android:layout_height="59dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:text="@string/smp_save" />

            <Button
                android:id="@+id/editProduct_delete"
                android:layout_width="200dp"
                android:layout_height="59dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:text="@string/smp_delete"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>