<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragments.service_product.create_product.CreateProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/cpf_title"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="25sp" />

            <Switch
                android:id="@+id/switchChangeFragment"
                android:layout_width="212dp"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:text="@string/cpf_new" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView3"
                android:name="com.example.eventplanner.fragments.service_product.create_product.ExistingCategoriesFragment"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <EditText
                android:id="@+id/editTextText10"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/cpf_name" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/cpf_description"/>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/cpf_price"/>

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:text="@string/cpf_discount"
                android:textColor="@color/text_color"/>

            <NumberPicker
                android:id="@+id/npDiscount"
                android:layout_width="77dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDiscount" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView4"
                android:name="com.example.eventplanner.fragments.service_product.create_product.ImagesPickerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectEType"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_width="308dp"
                android:layout_height="44dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="100dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvETypse"
                        android:paddingTop="10dp"
                        android:paddingLeft="15dp"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/cpf_checkbox" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_toEndOf="@+id/tvETypse"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/cpf_visibility"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/switchVisibility"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:text="@string/cpf_availability"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <Switch
                    android:id="@+id/switchAvailability"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="173dp"
                android:layout_height="60dp"
                android:text="@string/cpf_create"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="120dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>