<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:background="@color/background_color"
    android:elevation="4dp">

    <!-- ScrollView za skrolovljiv sadržaj -->
    <android.widget.ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/btn_filter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="16dp">

        <!-- LinearLayout unutar ScrollView za vertikalno pozicioniranje sadržaja -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Stavka koja otvara listu sa checkbox opcijama -->
            <LinearLayout
                android:id="@+id/filter_option_1_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/filter_option_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/option" />

                <ImageView
                    android:id="@+id/filter_option_1_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:contentDescription="@string/option"/>
            </LinearLayout>

            <!-- Lista sa checkbox opcijama koja će biti vidljiva nakon otvaranja filter opcije -->
            <LinearLayout
                android:id="@+id/filter_option_1_checkbox_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/check_option_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 1" />

                <CheckBox
                    android:id="@+id/check_option_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 2" />

                <CheckBox
                    android:id="@+id/check_option_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 3" />
            </LinearLayout>

        </LinearLayout>
    </android.widget.ScrollView>

    <!-- Dugme za potvrdu filtera, fiksirano na dnu -->
    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:text="@string/filter" />
</RelativeLayout>
