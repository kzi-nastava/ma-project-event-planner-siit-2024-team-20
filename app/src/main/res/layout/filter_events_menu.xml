<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:background="@color/background_color"
    android:elevation="4dp">

    <!-- ScrollView za skrolovljiv sadržaj -->
    <android.widget.ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/btn_filter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Type Filter -->
            <LinearLayout
                android:id="@+id/filter_option_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Header sa strelicom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/filter_option_type_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="0"
                        android:src="@drawable/ic_drop_down" />
                </LinearLayout>

                <!-- Dinamičke opcije za Type -->
                <LinearLayout
                    android:id="@+id/filter_option_type_checkbox_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Location Filter -->
            <LinearLayout
                android:id="@+id/filter_option_location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Header sa strelicom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/filter_option_location_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="0"
                        android:src="@drawable/ic_drop_down" />
                </LinearLayout>

                <!-- Dinamičke opcije za Location -->
                <LinearLayout
                    android:id="@+id/filter_option_location_checkbox_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Date Before filter - Checkbox -->
            <CheckBox
                android:id="@+id/checkboxDateBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select Date Before" />

            <!-- Date After filter - Checkbox -->
            <LinearLayout
                android:id="@+id/dateBeforeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/spinnerDayBefore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerMonthBefore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerYearBefore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkboxDateAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select Date After" />

            <!-- Date fields (Day, Month, Year) for Date Before - Hidden by default -->

            <!-- Date fields (Day, Month, Year) for Date After - Hidden by default -->
            <LinearLayout
                android:id="@+id/dateAfterContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/spinnerDayAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerMonthAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerYearAfter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </android.widget.ScrollView>

    <!-- Dugme za potvrdu filtera, fiksirano na dnu -->
    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:text="@string/filter" />
</RelativeLayout>
