<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.notification.NotificationFragment">

    <!-- Prekidač za utišavanje obaveštenja -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notificationMuteSwitch"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="Mute Notifications"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView za prikaz obaveštenja -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notificationMuteSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>
