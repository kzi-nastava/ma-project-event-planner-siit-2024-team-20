<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_top5_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/top_5_services_products"
                android:textColor="@color/text_color"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Kartica proizvoda 1 -->
                    <include
                        android:id="@+id/product5_card_1"
                        layout="@layout/event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:src="@android:color/darker_gray" />

                    <!-- Kartica proizvoda 2 -->
                    <include
                        android:id="@+id/product5_card_2"
                        layout="@layout/event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:src="@android:color/darker_gray" />

                    <!-- Kartica proizvoda 3 -->
                    <include
                        android:id="@+id/product5_card_3"
                        layout="@layout/event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:src="@android:color/darker_gray" />

                    <!-- Kartica proizvoda 4 -->
                    <include
                        android:id="@+id/product5_card_4"
                        layout="@layout/event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:src="@android:color/darker_gray" />

                    <!-- Kartica proizvoda 5 -->
                    <include
                        android:id="@+id/product5_card_5"
                        layout="@layout/event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:src="@android:color/darker_gray" />

                </LinearLayout>
            </HorizontalScrollView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/filter_products"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="34dp"
                    android:contentDescription="@string/filter_menu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_filter" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view_products"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/filter_products"
                    app:layout_constraintTop_toTopOf="parent">

                </androidx.appcompat.widget.SearchView>
                <!-- ImageView -->
                <ImageView
                    android:id="@+id/sort_products"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:contentDescription="@string/sort_menu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_sort" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Kartica proizvoda 1 -->
                <include
                    android:id="@+id/product_card_1"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Kartica proizvoda 2 -->
                <include
                    android:id="@+id/product_card_2"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_1" />

                <!-- Kartica proizvoda 3 -->
                <include
                    android:id="@+id/product_card_3"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_2" />

                <!-- Kartica proizvoda 4 -->
                <include
                    android:id="@+id/product_card_4"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_3" />

                <!-- Kartica proizvoda 5 -->
                <include
                    android:id="@+id/product_card_5"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_4" />

                <!-- Kartica proizvoda 6 -->
                <include
                    android:id="@+id/product_card_6"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_5" />

                <!-- Kartica proizvoda 7 -->
                <include
                    android:id="@+id/product_card_7"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_6" />

                <!-- Kartica proizvoda 8 -->
                <include
                    android:id="@+id/product_card_8"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_7" />

                <!-- Kartica proizvoda 9 -->
                <include
                    android:id="@+id/product_card_9"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_8" />

                <!-- Kartica proizvoda 10 -->
                <include
                    android:id="@+id/product_card_10"
                    layout="@layout/event_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_card_9" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
